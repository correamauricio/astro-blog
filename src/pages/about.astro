    <section class="w-full px-4 mb-32">
      <div class="max-w-7xl mx-auto">
        <h2 class="font-sans text-[45px] font-medium text-md-on-surface mb-12">Os arquitetos do ecossistema</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {teamMembers.map((member) => (
            <div class="flex flex-col gap-4 group">
              <!-- Image Card -->
              <div class="bg-md-surface-dim rounded-2xl p-8 flex items-center justify-center relative overflow-hidden transition-transform group-hover:-translate-y-1 duration-300">
                <div class="bg-md-surface-container relative w-[156px] h-[156px] rounded-full overflow-hidden z-10">
                  <Image src={member.img} alt={member.name} class="w-full h-full object-cover" />
                </div>
                
                <!-- Decorative Circle (Abstract) -->
                <div class="absolute top-4 left-4 w-14 h-14 rounded-full bg-md-primary/20 z-0"></div>
                <div class="absolute bottom-4 right-4 w-20 h-20 rounded-full bg-md-secondary-container/30 z-0"></div>
              </div>

              <!-- Info -->
              <div class="flex flex-col">
                <h3 class="font-sans text-2xl font-medium text-md-on-surface">{member.name}</h3>
                <p class="font-sans text-base text-md-on-surface-variant">{member.role}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

  </main>

</Layout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translate(-50%, -20px); }
    to { opacity: 1; transform: translate(-50%, 0); }
  }
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>