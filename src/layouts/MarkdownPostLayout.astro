---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <span>Written by {frontmatter.author}</span>
    <span>â€¢</span>
    <span>Published on: {frontmatter.pubDate.toString().slice(0,10)}</span>
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="100%" />

    <p>{frontmatter.description}</p>
    
    <hr>
    <slot />
    <hr>
    
    <ul class="tags">
        {frontmatter.tags.map((tag: string) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </ul>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25em;
    padding: 0;
  }

  .tag {
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>

